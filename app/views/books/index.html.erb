<h1>Book Club</h1>

<section id='sorting'>
  <div id='rating-sort'>
    <%= link_to 'Best Rated', books_path(sort: :sort_avg_reviews, direction: :desc) %>
    <%= link_to 'Worst Rated', books_path(sort: :sort_avg_reviews, direction: :asc) %>
  </div>
  <div id='page-sort'>
    <%= link_to 'Most Pages', books_path(sort: :sort_pages, direction: :desc) %>
    <%= link_to 'Fewest Pages', books_path(sort: :sort_pages, direction: :asc) %>
  </div>
  <div id='review-sort'>
    <%= link_to 'Most Reviews', books_path(sort: :sort_num_reviews, direction: :desc) %>
    <%= link_to 'Fewest Reviews', books_path(sort: :sort_num_reviews, direction: :asc) %>
  </div>
</section>

<%= link_to 'Add Book', new_book_path(argument_name: "my_arg") %>

<section id ='all-books'>
    <%= render @books %>
</section>
